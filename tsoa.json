{
    "entryFile": "src/main.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/modules/**/*controller.ts"],
    "spec": {
        "outputDirectory": "build/generated",
        "specVersion": 3,
        "basePath": "/api/v1",
        "securityDefinitions": {
            "bearerAuth": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "security": [
            {
                "bearerAuth": []
            }
        ]
    },
    "routes": {
        "routesDir": "build/generated",
        "basePath": "/api/v1",
        "authenticationModule": "./src/middlewares/authentication-middleware.ts"
    }
}
