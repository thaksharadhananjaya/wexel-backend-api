{
  "compilerOptions": {
    "target": "es2021", 
    "lib": ["es2021"],    
    "module": "commonjs",
    "outDir": "./build/dist",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
